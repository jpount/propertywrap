<h1>Editing property</h1>

<%= render 'form' %>

<h1>Listing transactions</h1>

<table>
  <thead>
  <tr>
    <th>Income type</th>
    <th>Outgoing</th>
    <th>Value</th>
    <th>Fequency</th>
    <th>Last due</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @property.transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.income_type %></td>
      <td><%= transaction.outgoing_type %></td>
      <td><%= transaction.value %></td>
      <td><%= transaction.frequency %></td>
      <td><%= transaction.last_due %></td>
      <td><%= link_to 'Edit',  edit_property_transaction_path(@property, transaction) %></td>
      <td><%= link_to 'Destroy', property_transaction_path(@property, transaction), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Transaction', new_property_transaction_path(@property) %>
