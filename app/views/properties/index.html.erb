<h1>Property List</h1>

<%= search_form_for @q, url: properties_path(@q), html: {:class => 'form-inline', :role => "form"} do |f| %>
    <div class="form-group">
      <%= f.label :city_cont, {:class => 'sr-only'} %>
      <%= f.search_field :city_cont, {:class => 'form-control', :placeholder => "Suburb/City Contains"} %>
    </div>
    <%= f.submit :class => "btn btn-primary" %>
<% end %>

<table id="table-1" class="table table-striped table-bordered dataTable" aria-describedby="table-1_info">
  <thead>
  <tr>
    <th>Unit no</th>
    <th>Street no</th>
    <th>Street</th>
    <th>Post code</th>
    <th>City</th>
    <th>Type</th>
    <th>Beds</th>
    <th>Baths</th>
    <th colspan="1"></th>
  </tr>
  </thead>

  <tbody role="alert" aria-live="polite" aria-relevant="all">
  <% @properties.each do |property| %>
      <tr>
        <td><%= property.unit_no %></td>
        <td><%= property.street_no %></td>
        <td><%= property.street %></td>
        <td><%= property.post_code %></td>
        <td><%= property.city %></td>
        <td><%= property.property_type %></td>
        <td><%= property.no_of_beds %></td>
        <td><%= property.no_of_baths %></td>
        <td><%= link_to 'Details', property_detail_path(property), :class => "btn btn-sm btn-secondary" %> <%= link_to 'Edit', edit_property_path(property), :class => "btn btn-sm btn-secondary" %> <%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-primary" %></td>
      </tr>
  <% end %>
  </tbody>
  <%= paginate @properties %>
</table>
<br>
<%= link_to 'New Property', new_property_path, :class => "btn btn-secondary" %>

