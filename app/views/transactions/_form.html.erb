<%= form_for([@property, @transaction], html: {class: "form-horizontal"}) do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :income_type, class: "col-md-3" %>
    <div class="col-md-7">
      <%= f.select( :income_type, Transaction::INCOME_TYPE.map{|i| [i,i]}, {:include_blank => true}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :outgoing_type, class: "col-md-3" %>
    <div class="col-md-7">
      <%= f.select( :outgoing_type, Transaction::OUTGOING_TYPE.map{|i| [i,i]}, {:include_blank => true}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :value, class: "col-md-3" %>
    <div class="col-md-7">
      <%= f.text_field :value, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :frequency, class: "col-md-3" %>
    <div class="col-md-7">
      <%= f.select( :frequency, Transaction::FREQUENCY.map{|i| [i,i]}, {:include_blank => true}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_due, class: "col-md-3" %>
    <div class="col-md-7">
      <%= f.date_field :last_due, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-7 col-md-push-3">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to 'Back', edit_property_path(@property), class: "btn btn-secondary"  %>
    </div> <!-- /.col -->
  </div> <!-- /.form-group -->
<% end %>
