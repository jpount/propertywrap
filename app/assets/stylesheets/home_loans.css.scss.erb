.box-content {
    display: table-cell;
    padding: 45px 30px 30px;
    vertical-align: top;
    line-height: 1.2;
}

.table-content {
    border: 0 none;
    width: 100%;

}

.table-content tr {
    -moz-border-bottom-colors: none;
    -moz-border-left-colors: none;
    -moz-border-right-colors: none;
    -moz-border-top-colors: none;
    border-color: #5e5e5e -moz-use-text-color;
    border-image: none;
    border-left: 0 none;
    border-right: 0 none;
    border-style: solid none;
    border-width: 1px 0;
}
.table-content tr td {
    -moz-border-bottom-colors: none;
    -moz-border-left-colors: none;
    -moz-border-right-colors: none;
    -moz-border-top-colors: none;
    border-color: -moz-use-text-color #5e5e5e -moz-use-text-color -moz-use-text-color;
    border-image: none;
    border-style: none none none none;
    border-width: 0 0 0 0;
}
.table-content tr td p {
    font-size: 1.4em;
    font-weight: 300;
    margin-bottom: 1em;
    margin-top: 1em;
}
